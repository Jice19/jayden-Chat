generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = "postgresql://jayden:123456@localhost:5432/doubao_db?schema=public"
}

model Session {
  id        String   @id @default(cuid())
  title     String
  createdAt DateTime @default(now())
  chats     Chat[]
}

model Chat {
  id        String   @id @default(cuid())
  content   String
  isUser    Boolean
  createdAt DateTime @default(now())
  sessionId String?
  session   Session? @relation(fields: [sessionId], references: [id])
}
